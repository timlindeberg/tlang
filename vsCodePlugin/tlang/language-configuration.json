{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    {"open": "[", "close": "]"},
    {"open": "(", "close": ")"},
    {"open": "'", "close": "'", "notIn": ["string", "comment"]},
    {"open": "\"", "close": "\"", "notIn": ["string"]},
    {"open": "`", "close": "`", "notIn": ["string", "comment"]}
  ],
  "surroundingPairs": [
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "folding": {
    "markers": {
      "start": "^(\\s+)(?=\\S)",
      "end": "^(?!\\1\\s+)(?!\\s*$)"
    }
  },
  "wordPattern": "[0-9a-zA-Z_]+",
  "indentationRules": {
    "increaseIndentPattern": "^.*if\\(.*\\)$"
  }
}
