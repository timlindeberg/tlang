// Integers
var i: Int = 'a'
println(i) // res: 97

// Long
var l: Long = 5
println(l) // res: 5

l = 'a'
println(l) // res: 97

// Float

var f: Float = 5
println(f) // res: 5.0

f = 5L
println(f) // res: 5.0

f = 'a'
println(f) // res: 97.0

// Double

var d: Double = 5
println(d) // res: 5.0

d = 5L
println(d) // res: 5.0

d = 'a'
println(d) // res: 97.0

d = 5.0f
println(d) // res: 5.0