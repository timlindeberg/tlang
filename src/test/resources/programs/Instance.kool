main Main = {
	new H().run();
}

class H {

  Def run(): Unit = {
     var a: A;
     var b: B;
     var c: A;
     a = new A();
     b = new B();
     c = new B();

     println(a inst A); // res: true
     println(a inst B); // res: false
     println(b inst B); // res: true
     println(b inst A); // res: true
     println(c inst A); // res: true
     println(c inst B); // res: true

  }

}


class A {}
class B extends A {}
